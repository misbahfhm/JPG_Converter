#:kivy 2.0.0
#:import platform kivy.utils.platform

<MyWidget>:
    cols:1
    id:my_widget

    Image:
        id: my_image
        source: ""

    FileChooserListView:
        rootpath: '/storage/emulated/0/' if platform == 'android' else '/'
        id:filechooser
        on_selection: my_widget.selected(filechooser.selection)
    Button:
        text: 'Convert to JPG'
        size_hint_x:.7
        size_hint_y:.15
        background_color:1,1,1,1
        pos_hint:{'center_x':.5,'center_y':.5}
        on_press: print("try to release your press")
        on_release: app.img_to_jpg(my_image.source)